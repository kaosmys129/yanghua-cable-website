# WordPress迁移配置
# 复制此文件为 .env.wordpress.local 并填入实际配置

# WordPress站点配置
WP_SITE_URL=http://localhost:8080
WP_USERNAME=admin
WP_PASSWORD=your_admin_password

# 数据库配置
WP_DB_NAME=yanghua_wordpress
WP_DB_USER=wp_user
WP_DB_PASSWORD=your_db_password
WP_DB_HOST=localhost

# 迁移配置
MIGRATION_BATCH_SIZE=10
MIGRATION_DELAY_MS=500
MIGRATION_RETRY_COUNT=3

# 备份配置
BACKUP_ENABLED=true
BACKUP_DIR=./backup/wordpress-migration

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/wordpress-migration.log