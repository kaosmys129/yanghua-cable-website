  "excludePatterns": [
    "/api/*",
    "/admin/*", 
    "/_next/*",
    "/favicon.ico",
    "/robots.txt",
    "/sitemap.xml",
    "/sitemap-*.xml",
    "/*.json",
    "/*.js",
    "/*.css"
  ],
  
  "seoChecks": {
    "critical": [
      "title-exists",
      "title-length",
      "meta-description-exists", 
      "meta-description-length",
      "h1-exists",
      "h1-unique",
      "lang-attribute",
      "img-alt-attributes"
    ],
    "important": [
      "heading-structure",
      "meta-viewport",
      "meta-charset",
      "canonical-url",
      "hreflang-tags",
      "open-graph-basic"
    ],
    "recommended": [
      "meta-robots",
      "structured-data",
      "internal-links",
      "external-links-nofollow",
      "page-load-speed",
      "mobile-friendly"
    ]
  },
  
  "performance": {
    "maxConcurrency": 2,
    "requestDelay": 1000,
    "timeout": 30000,
    "retries": 3,
    "userAgent": "SEO-Analyzer/3.2.0 (Yanghua B2B Website)"
  },
  
  "reporting": {
    "formats": ["json", "html", "csv"],
    "includeScreenshots": false,
    "detailedAnalysis": true,
    "generateSummary": true,
    "alertThresholds": {
      "criticalIssues": 0,
      "errorIssues": 5,
      "overallScore": 70
    }
  },
  
  "multilingual": {
    "checkHreflangTags": true,
    "validateLanguageAttributes": true,
    "checkTranslationCompleteness": true,
    "verifyLocalizedUrls": true
  }
}