{
  "kind": "collectionType",
  "collectionName": "hubs",
  "info": {
    "singularName": "hub",
    "pluralName": "hubs",
    "displayName": "Hub",
    "description": "Topic hub pages for curated article clusters"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "intro": {
      "type": "richtext",
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos"],
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "featured_articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article"
    }
  }
}